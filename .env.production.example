# PRODUCTION ENVIRONMENT VARIABLES
# Copy this file to .env.production for production deployment

# AUTHENTICATION & SECURITY (REQUIRED)
NEXTAUTH_URL=https://your-domain.vercel.app
NEXTAUTH_SECRET=__SET_IN_ENV_PROVIDER__
VERCEL_URL=your-domain.vercel.app

# DATABASE (REQUIRED)
MONGODB_URI=__SET_IN_ENV_PROVIDER__

# ADMIN USER SETTINGS (REQUIRED)
ADMIN_EMAIL=your-email@example.com
ADMIN_NAME=Your Full Name
ADMIN_DEFAULT_PASSWORD=__SET_IN_ENV_PROVIDER__

# CLOUDINARY (RECOMMENDED)
CLOUDINARY_CLOUD_NAME=__OPTIONAL__
CLOUDINARY_API_KEY=__OPTIONAL__
CLOUDINARY_API_SECRET=__OPTIONAL__

# OPENAI (OPTIONAL)
OPENAI_API_KEY=__OPTIONAL__
OPENAI_ORG_ID=__OPTIONAL__

# EMAIL (OPTIONAL)
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-16-char-app-password

# APP CONFIGURATION
APP_NAME=Personal Blog
APP_URL=https://your-domain.vercel.app
NODE_ENV=production

# ðŸ”’ SECURITY SETTINGS
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000
BYPASS_RATE_LIMIT=false