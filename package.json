{
  "name": "personal-blog",
  "version": "2.2.6",
  "private": true,
  "author": {
    "name": "Erdem Erciyas",
    "email": "erdem.erciyas@gmail.com",
    "url": "https://www.erdemerciyas.com.tr"
  },
  "description": "Modern kişisel blog ve portfolio sitesi - Next.js ile geliştirilmiştir",
  "keywords": [
    "nextjs",
    "react",
    "typescript",
    "portfolio",
    "blog",
    "engineering"
  ],
  "homepage": "https://www.erdemerciyas.com.tr",
  "repository": {
    "type": "git",
    "url": "https://github.com/erdemerciyas/personal-blog"
  },
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "dev:turbo": "next dev --turbo",
    "build": "next build",
    "build:analyze": "cross-env ANALYZE=true next build",
    "vercel-build": "node vercel-build-fix.js",
    "cpanel-build": "node scripts/universal-build.js",
    "start": "next start",
    "start:dev": "next start",
    "lint": "next lint || true",
    "lint:fix": "next lint --fix || true",
    "type-check": "tsc --noEmit",
    "test:config": "node scripts/validate-env.js",
    "clean": "rimraf .next out dist",
    "format": "prettier --write .",
    "precommit": "npm run lint",
    "postinstall": "node -e \"if (process.env.NODE_ENV !== 'production' && !process.env.VERCEL && !process.env.CI) { try { require('husky').install() } catch (e) { console.log('Husky not available, skipping...') } } else { console.log('Production environment, skipping husky install') }\"",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "prepare": "node -e \"if (process.env.NODE_ENV !== 'production' && process.env.VERCEL !== '1') { try { require('husky').install() } catch (e) { console.log('Husky not available, skipping...') } }\"",
    "test:security": "node scripts/security-test.js",
    "test:accessibility": "node scripts/accessibility-test.js",
    "test:performance": "node scripts/performance-test.js",
    "security:test": "node scripts/security-test.js",
    "perf:check": "node scripts/performance-test.js",
    "audit": "npm audit --audit-level moderate",
    "deploy": "vercel --prod",
    "deploy:preview": "vercel",
    "analyze": "cross-env ANALYZE=true npm run build"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@types/bcryptjs": "^2.4.6",
    "@types/dompurify": "^3.0.5",
    "@types/jsdom": "^21.1.7",
    "@types/multer": "^1.4.12",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.6.1",
    "clsx": "^2.1.1",
    "dompurify": "^3.2.6",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.4",
    "framer-motion": "^12.23.6",
    "jsdom": "^26.1.0",
    "mongodb": "^6.16.0",
    "mongoose": "^8.15.1",
    "multer": "^2.0.0",
    "next": "^14.0.4",
    "next-auth": "^4.24.11",
    "next-i18next": "^15.4.2",
    "nodemailer": "^7.0.5",
    "openai": "^5.2.0",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^15.6.0",
    "rimraf": "^3.0.2",
    "slugify": "^1.6.6",
    "tailwindcss": "^3.4.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.4.1",
    "@types/node": "^24.0.13",
    "cross-env": "^7.0.3",
    "husky": "^9.1.7",
    "lighthouse": "^12.8.0",
    "prettier": "^3.0.0",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
