  "author": {
    "name": "Erdem Erciyas",
    "email": "erdem.erciyas@gmail.com",
    "url": "https://www.erdemerciyas.com.tr"
  },
  "description": "Modern kişisel blog ve portfolio sitesi - Next.js ile geliştirilmiştir",
  "keywords": [
    "nextjs",
    "react",
    "typescript",
    "portfolio",
    "blog",
    "engineering"
  ],
  "homepage": "https://www.erdemerciyas.com.tr",
  "repository": {
    "type": "git",
    "url": "https://github.com/erdemerciyas/personal-blog"
  },
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "dev:turbo": "next dev --turbo",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "vercel-build": "next build",
    "cpanel-build": "node scripts/universal-build.js",
    "start": "next start",
    "start:dev": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test:config": "node -e \"require('./src/lib/config').config.getSafeConfig() && console.log('✅ Configuration valid')\"",
    "clean": "rimraf .next out dist",
    "clean:cloudinary": "node scripts/clean-invalid-cloudinary-urls.js",
    "format": "prettier --write .",
    "precommit": "npm run lint",
    "postinstall": "echo 'Dependencies installed successfully'",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version",
    "version:release": "standard-version",
    "version:auto": "node scripts/auto-version.js",
    "prepare": "husky"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.15.24",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.6.1",
    "critters": "^0.0.23",
    "dotenv": "^16.5.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.4",
    "jose": "^6.0.11",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.16.0",
    "mongoose": "^8.15.1",
    "multer": "^2.0.0",
    "next": "^14.0.4",
    "next-auth": "^4.24.11",
    "nodemailer": "^7.0.3",
    "openai": "^5.2.0",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.6",
    "husky": "^9.1.7",
    "prettier": "^3.0.0",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
