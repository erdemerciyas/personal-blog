{
  "name": "personal-blog",
  "version": "1.13.5",
  "private": true,
  "author": {
    "name": "Erdem Erciyas",
    "email": "erdem.erciyas@gmail.com",
    "url": "https://www.erdemerciyas.com.tr"
  },
  "description": "Modern kişisel blog ve portfolio sitesi - Next.js ile geliştirilmiştir",
  "keywords": [
    "nextjs",
    "react",
    "typescript",
    "portfolio",
    "blog",
    "engineering"
  ],
  "homepage": "https://www.erdemerciyas.com.tr",
  "repository": {
    "type": "git",
    "url": "https://github.com/erdemerciyas/personal-blog"
  },
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "dev:turbo": "next dev --turbo",
    "build": "next build",
    "build:analyze": "cross-env ANALYZE=true next build",
    "vercel-build": "node vercel-build-fix.js",
    "cpanel-build": "node scripts/universal-build.js",
    "start": "next start",
    "start:dev": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test:config": "node -e \"require('./src/lib/config').config.getSafeConfig() && console.log('✅ Configuration valid')\"",
    "clean": "rimraf .next out dist",
    "clean:cloudinary": "node scripts/clean-invalid-cloudinary-urls.js",
    "format": "prettier --write .",
    "precommit": "npm run lint",
    "postinstall": "echo 'Dependencies installed successfully'",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version",
    "version:release": "standard-version",
    "version:auto": "node scripts/auto-version.js",
    "prepare": "husky",
    "migrate:portfolio-categories": "node scripts/migrate-portfolio-categories.js",
    "migrate:portfolio-categories:dry-run": "node scripts/migrate-portfolio-categories.js --dry-run",
    "migrate:slugs": "ts-node -r tsconfig-paths/register scripts/migrate-portfolio-slugs.ts",
    "security:test": "node scripts/security-test.js",
    "security:audit": "npm audit --audit-level moderate",
    "security:check": "npm run security:test && npm run security:audit",
    "perf:test": "node scripts/performance-test.js",
    "perf:analyze": "cross-env ANALYZE=true npm run build",
    "perf:lighthouse": "lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html",
    "perf:bundle": "npm run build && npx @next/bundle-analyzer",
    "perf:check": "npm run perf:test && npm run build"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@types/bcryptjs": "^2.4.6",
    "@types/dompurify": "^3.0.5",
    "@types/jsdom": "^21.1.7",
    "@types/multer": "^1.4.12",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "cloudinary": "^2.6.1",
    "clsx": "^2.1.1",
    "critters": "^0.0.23",
    "dompurify": "^3.2.6",
    "dotenv": "^16.5.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.4",
    "jose": "^6.0.11",
    "jsdom": "^26.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.16.0",
    "mongoose": "^8.15.1",
    "multer": "^2.0.0",
    "next": "^14.0.4",
    "next-auth": "^4.24.11",
    "next-i18next": "^15.4.2",
    "nodemailer": "^7.0.5",
    "openai": "^5.2.0",
    "postcss": "^8.4.32",
    "quill": "^2.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^15.6.0",
    "react-quill": "^2.0.0",
    "rimraf": "^3.0.2",
    "slugify": "^1.6.6",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.4.1",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^24.0.13",
    "cross-env": "^7.0.3",
    "husky": "^9.1.7",
    "lighthouse": "^12.8.0",
    "prettier": "^3.0.0",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
